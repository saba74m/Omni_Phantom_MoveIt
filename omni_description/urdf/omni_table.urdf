<?xml version="1.0" encoding="utf-8"?>
<robot name="phantom_omni" xmlns:xacro="http://www.ros.org/wiki/xacro">
	
	<!-- and assemble your robot -->
	<!-- Attaching My Robot To the WORLD by introducing a dummy link-->
	<link name="world" />

    <joint name="world_to_box" type="fixed">
	  <parent link="world"/>
      <child link="box"/>
    </joint>

	<link name="box">
		<inertial>
			<mass value="5.0"/>
			<origin rpy="0 0 0" xyz="0 0 0"/>
			<inertia ixx="0.01"
             iyy="0.01"
             izz="0.01"
             ixy="0" iyz="0" ixz="0"/>
		</inertial>
		<visual>
			<origin xyz="0 0 0.50" rpy="0 0 0"/>
			<geometry>
				<box size="2.0 1.0 1.0"/>
			</geometry>
		</visual>
		<collision>
			<origin xyz="0 0 0.50" rpy="0 0 0"/>
			<geometry>
				<box size="2.0 1.0 1.0"/>
			</geometry>
		</collision>
	</link>

	<gazebo reference="box">
		<static>true</static>
	</gazebo>

  <joint name="box_to_base" type="fixed">
	  <parent link="box"/>
      <child link="base"/>
  </joint>

  <!-- Include all models -->
	<include filename="$(find omni_description)/urdf/omni_table.urdf"/>

</robot>

